# ================================================
# PHStore Backend - Environment Variables
# ================================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control
# ================================================

# ----------------
# Server Configuration
# ----------------

# Base URL of the backend API (used for generating absolute URLs for images)
# Default: http://localhost:4000
BASE_URL="http://localhost:4000"

# Node environment (development, production, test)
# Default: development
NODE_ENV="development"

# ----------------
# Frontend Configuration
# ----------------

# Frontend application URL (used for CORS and redirects after payment)
# Example: http://localhost:3000
FRONTEND_URL="http://localhost:3000"

# ----------------
# Database Configuration
# ----------------

# PostgreSQL database connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# Example: postgresql://user:password@localhost:5432/phstore
DATABASE_URL="postgresql://user:password@localhost:5432/phstore"

# Prisma Accelerate connection string (optional, for production scaling)
# Leave empty if not using Prisma Accelerate
PRISMA_DATABASE_URL=""

# Direct PostgreSQL URL (used by Vercel and some deployment platforms)
# Usually same as DATABASE_URL
POSTGRES_URL=""

# ----------------
# Authentication Configuration
# ----------------

# JWT secret key for signing access tokens (generate a secure random string)
# Example: Use `openssl rand -hex 64` to generate a secure key
JWT_SECRET="your_jwt_secret_key_here"

# JWT secret key for signing refresh tokens (generate a different secure random string)
# Example: Use `openssl rand -hex 64` to generate a secure key
JWT_REFRESH_SECRET="your_jwt_refresh_secret_key_here"

# ----------------
# Stripe Payment Configuration
# ----------------

# Stripe secret API key (get from https://dashboard.stripe.com/apikeys)
# Format: sk_test_... for test mode, sk_live_... for production
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"

# Stripe webhook signing secret (get from https://dashboard.stripe.com/webhooks)
# Format: whsec_...
# Used to verify webhook events from Stripe
STRIPE_WEBHOOK_KEY="whsec_your_webhook_signing_secret_here"

# ----------------
# File Storage Configuration
# ----------------

# Path to product images (relative to public directory)
# Default: media/products/
PRODUCT_IMAGE_PATH="media/products/"

# ----------------
# Deployment Configuration (Vercel)
# ----------------

# Vercel OIDC token (automatically set by Vercel, leave empty for local development)
VERCEL_OIDC_TOKEN=""
